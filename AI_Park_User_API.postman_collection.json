{
  "info": {
    "name": "AI Park - User API",
    "description": "User backend API for AI Park parking app",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8080",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "1. Verify Phone (Send OTP)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"tel\": \"99001122\",\n  \"name\": \"Тест Хэрэглэгч\",\n  \"password\": \"123456\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/verify-phone",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "verify-phone"]
            }
          },
          "response": []
        },
        {
          "name": "2. Complete Registration (Verify OTP)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"tel\": \"99001122\",\n  \"otp\": \"123456\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/complete-registration",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "complete-registration"]
            }
          },
          "response": []
        },
        {
          "name": "3. Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "if (jsonData.data && jsonData.data.token) {",
                  "    pm.collectionVariables.set('token', jsonData.data.token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"tel\": \"99001122\",\n  \"password\": \"123456\",\n  \"fcm_token\": \"optional_fcm_token_here\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/login",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "login"]
            }
          },
          "response": []
        },
        {
          "name": "4. Get Profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/profile",
              "host": ["{{base_url}}"],
              "path": ["api", "profile"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Parking",
      "item": [
        {
          "name": "1. Get Available Devices",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/devices",
              "host": ["{{base_url}}"],
              "path": ["api", "devices"]
            }
          },
          "response": []
        },
        {
          "name": "2. Start Parking Session",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"device_id\": 1\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/parking/start",
              "host": ["{{base_url}}"],
              "path": ["api", "parking", "start"]
            }
          },
          "response": []
        },
        {
          "name": "3. Get Active Session",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/parking/active",
              "host": ["{{base_url}}"],
              "path": ["api", "parking", "active"]
            }
          },
          "response": []
        },
        {
          "name": "4. End Parking Session",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/parking/1/end",
              "host": ["{{base_url}}"],
              "path": ["api", "parking", "1", "end"]
            }
          },
          "response": []
        },
        {
          "name": "5. Get Parking History",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/parking/history?limit=20",
              "host": ["{{base_url}}"],
              "path": ["api", "parking", "history"],
              "query": [
                {
                  "key": "limit",
                  "value": "20"
                }
              ]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Payment",
      "item": [
        {
          "name": "1. Create QPay Invoice",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/parking/1/qpay",
              "host": ["{{base_url}}"],
              "path": ["api", "parking", "1", "qpay"]
            }
          },
          "response": []
        },
        {
          "name": "2. Check Payment Status",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/payment/1/check",
              "host": ["{{base_url}}"],
              "path": ["api", "payment", "1", "check"]
            }
          },
          "response": []
        },
        {
          "name": "3. Pay with Wallet",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/parking/1/wallet-pay",
              "host": ["{{base_url}}"],
              "path": ["api", "parking", "1", "wallet-pay"]
            }
          },
          "response": []
        },
        {
          "name": "4. Get Payment History",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/payments",
              "host": ["{{base_url}}"],
              "path": ["api", "payments"]
            }
          },
          "response": []
        }
      ]
    }
  ]
}
